# Environment Configuration
# Copy this file to .env.local and fill in your values:
#   cp env.example .env.local

# Node Environment
NODE_ENV=development

# Documentum API Configuration
DOCUMENTUM_API_URL=https://api.documentum.example.com
DOCUMENTUM_API_KEY=your-api-key-here

# Database (optional)
DATABASE_URL=postgresql://user:password@localhost:5432/documentum

# Public Environment Variables (exposed to client)
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Documentum

# Skip env validation during build (for CI/CD)
# SKIP_ENV_VALIDATION=true
